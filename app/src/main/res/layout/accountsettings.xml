<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AccountSettings">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0FFFFFFF"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewCheckAvailability"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="18dp"
        android:gravity="center"
        android:text="Account Settings"
        android:textColor="#1975AE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar1"
        app:layout_constraintEnd_toEndOf="@+id/toolbar1"
        app:layout_constraintStart_toStartOf="@+id/toolbar1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <ImageButton
        android:id="@+id/backBttn_AccountSettings"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_roundback"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView6"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:tint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/ic_person"
        app:strokeColor="#000000"
        app:strokeWidth="3dp" />

    <!--
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:tint="@color/white"
        android:backgroundTint="#0000"
        android:contentDescription="TODO"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/ic_camera" />
-->

    <TextView
        android:id="@+id/textView11"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/accountNumber"
        android:layout_width="210dp"
        android:layout_height="30sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/corner_stroke_blue"
        android:gravity="center"
        android:text=" "
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="HardcodedText,TextSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountNumber"
        app:srcCompat="@drawable/ic_accinfo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Personal Info"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/accountNumber"
        tools:ignore="HardcodedText" />


    <ImageView
        android:id="@+id/editPersonalInfo"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/accountNumber"
        app:srcCompat="@drawable/ic_edit"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/frameLayout4"
        android:layout_width="wrap_content"
        android:layout_height="162sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/corner_solidwhite"
        android:orientation="vertical"
        android:padding="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        tools:ignore="TextSizeCheck">


        <!-- New Email-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:layout_marginStart="5dp"
            android:text="Email:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/newEmail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="55dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
        <!--
               <ImageButton
                   android:id="@+id/newEmailbttn"
                   android:layout_width="15sp"
                   android:layout_height="15sp"
                   android:layout_marginStart="320dp"
                   android:layout_marginTop="15dp"
                   android:background="@drawable/ic_right_arrow"
                   tools:ignore="SpeaesentCheck,TouchTargetSizeCheck" />


                View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="1sp"
                    android:background="@android:color/black" />


         New Mobile Number-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="65dp"
            android:text="Mobile Number:"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="60dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
        <!--
                <ImageButton
                    android:layout_width="15sp"
                    android:layout_height="15sp"
                    android:layout_marginStart="320dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/ic_right_arrow"
                    tools:ignore="SpearesentCheck,TouchTargetSizeCheck" />

                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:layout_marginTop="100dp"
                     android:layout_marginBottom="1sp"
                     android:background="@android:color/black" /> -->


        <!-- Birthday-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="115dp"
            android:text="Birthday:"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/newBirthday"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="110dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />
        <!--
        <ImageButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="320dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/ic_right_arrow"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputemail"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:enabled="false"
            android:hint=""
            android:maxLength="50"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textColorHighlight="@color/black"
            android:textSize="15dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputmobilenum"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="127dp"
            android:layout_marginTop="55dp"
            android:enabled="false"
            android:hint=""
            android:maxLength="11"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textColorHighlight="@color/black"
            android:textSize="15dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputbday"
            android:layout_width="255dp"
            android:layout_height="45dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="100dp"
            android:enabled="false"
            android:hint=""
            android:maxLength="10"
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textColorHighlight="@color/black"
            android:textSize="15dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </FrameLayout>


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4"
        app:srcCompat="@drawable/ic_billingaddress"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Billing Address"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/editBillingAddress"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4"
        app:srcCompat="@drawable/ic_edit"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/frameLayout5"
        android:layout_width="0dp"
        android:layout_height="54sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/corner_solidwhite"
        android:padding="15sp"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout4"
        app:layout_constraintStart_toStartOf="@+id/frameLayout4"
        app:layout_constraintTop_toBottomOf="@+id/editBillingAddress">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textSize="16sp"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/address"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorLink="@color/black"
            android:textColorHighlight="@color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <!--
        <ImageButton
            android:layout_width="15sp"
            android:layout_height="15sp"
            android:layout_marginStart="310dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_right_arrow"
            tools:ignore="SpeakableTextPresentCheck" />
-->
    </FrameLayout>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout5"
        app:srcCompat="@drawable/ic_accpass"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Account Password"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout5"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/editPass"
        android:layout_width="18sp"
        android:layout_height="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout5"
        app:srcCompat="@drawable/ic_edit"
        tools:ignore="ContentDescription" />


    <Button
        android:id="@+id/savechangesBttn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/blue"
        android:elevation="10dp"
        android:onClick="savingchanges"
        android:text="Save Changes"
        app:layout_constraintEnd_toEndOf="@+id/frameLayout5"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/frameLayout5"
        app:layout_constraintTop_toBottomOf="@+id/textView14"
        tools:ignore="OnClick" />


</androidx.constraintlayout.widget.ConstraintLayout>
